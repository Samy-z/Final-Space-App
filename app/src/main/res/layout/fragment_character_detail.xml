<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".files.detail.CharacterDetailFragment">
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@drawable/finalspacebar"
        android:background="@color/black"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        android:textAlignment="center"
        app:layout_anchor="@+id/appBarLayout2"
        app:layout_anchorGravity="center" ></ImageView>

    <TextView
        android:id="@+id/textview_detail_name"

        android:textSize="50dp"
        android:fontFamily="@font/montana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/button_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgView"
        app:layout_constraintVertical_bias="0.10" />

    <ImageView
        android:id="@+id/imgview_detail_img_url"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@id/button_second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintTop_toBottomOf="@id/textview_detail_name" />

    <Button
        android:id="@+id/button_second"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/montana"
        android:textColor="@color/white"
        android:text="LISTE DES PERSONNAGES"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>