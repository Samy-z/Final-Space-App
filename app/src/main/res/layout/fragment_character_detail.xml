<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".files.detail.CharacterDetailFragment">
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@drawable/finalspacebar"
        android:background="@color/black"
        app:layout_anchor="@+id/appBarLayout2"
        app:layout_anchorGravity="center" />

    <ImageView
        android:id="@+id/imgview_detail_img_url"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="19dp"
        app:layout_constraintBottom_toTopOf="@id/button_second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_detail_name"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textview_detail_name"

        android:textSize="40dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/button_second"
        app:layout_constraintEnd_toEndOf="@id/textview_detail_species"
        app:layout_constraintStart_toStartOf="@id/imgview_detail_img_url"
        app:layout_constraintTop_toBottomOf="@id/imgView"
        app:layout_constraintVertical_bias="0.075" ></TextView>

    <TextView
        android:id="@+id/textview_detail_species"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montana"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/imgview_detail_img_url"
        app:layout_constraintLeft_toRightOf="@id/imgview_detail_img_url"

        ></TextView>
    <TextView
        android:id="@+id/textview_detail_hair"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montana"
        android:textColorHighlight="@color/black"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/textview_detail_species"
        app:layout_constraintLeft_toRightOf="@id/imgview_detail_img_url"

        ></TextView>

    <TextView
        android:id="@+id/textview_detail_gender"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montana"
        android:textColorHighlight="@color/black"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:textSize="25dp"
        app:layout_constraintLeft_toRightOf="@id/imgview_detail_img_url"
        app:layout_constraintTop_toBottomOf="@id/textview_detail_hair"></TextView>

    <TextView
        android:id="@+id/textview_detail_origin"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/montana"
        android:textColor="@color/white"
        android:textColorHighlight="@color/black"
        android:textSize="25dp"

        app:layout_constraintLeft_toLeftOf="@id/imgview_detail_img_url"
        app:layout_constraintTop_toBottomOf="@id/imgview_detail_img_url"></TextView>

    <TextView
        android:id="@+id/textview_detail_status"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textview_detail_origin"
        app:layout_constraintLeft_toLeftOf="@id/imgview_detail_img_url"
        />
    <Button
        android:id="@+id/button_second"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/montana"
        android:textColor="@color/white"
        android:text="LISTE DES PERSONNAGES"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>


